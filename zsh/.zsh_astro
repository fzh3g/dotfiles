export EXPLIB=$PUBDIR/xrayidl/experimental
export IDL_PATH='<IDL_DEFAULT>'
export IDL_PATH=$IDL_PATH:+'$PUBDIR/idladd/idlastronlib/pro'
export IDL_PATH=$IDL_PATH:+'$PUBDIR/idladd/rosatidl'
